            <!-- main content start -->

            <section class="content">
                <div class="container-fluid">
                    <div class="container-fluid">
                        <div class="card">
                            <div class="card-header"><i class="fas fa-pencil-alt"></i> Add Information</div>
                            <div class="card-body">
                                <form id="form-category" action="https://demo.opencart.com/admin/index.php?route=catalog/category|save&amp;user_token=9f8d7e75061a409dedaeb3936ff61693" method="post" data-oc-toggle="ajax">
                                    <ul class="nav nav-tabs">
                                        <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">General</a></li>
                                        <li class="nav-item"><a href="#tab-data" data-bs-toggle="tab" class="nav-link">Data</a></li>
