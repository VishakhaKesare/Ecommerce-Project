
@{
    ViewBag.Title = "attributesGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Attributes Groups</h1>


                </div><!-- /.col -->
                <div class="col-md-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Attributes Group</li>
                    </ol>

                </div><!-- /.col -->
                <div class="col">
                    <div class="float-sm-right">
                        <a href="@Url.Action("AddAttributesGroup")" data-bs-toggle="tooltip" title="" class="btn btn-primary" data-bs-original-title="Add New" aria-label="Add New"><i class="fas fa-plus"></i></a>
                        <button type="submit" form="form-subscription-plan"
                                formaction="https://demo.opencart.com/admin/index.php?route=catalog/subscription_plan|delete&amp;user_token=4ca83d273fa34bd95748b6ad76b4193a" data-bs-toggle="tooltip" title="" onclick="return confirm('Are you sure?');" class="btn btn-danger" data-bs-original-title="Delete" aria-label="Delete">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
            <div class="row">

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"> <i class="fas fa-list"></i> &nbsp;Atrributes Group List</h3>
                    </div>

                    <!-- /.card-header -->
                    @{
                        string[] attributesGroup = { "Memory", "Motherboard", "processor", "technical", "description" };
                    }
                    <div class="card-body">
                        <table class="table table-bordered" id="attributeGroups">
                            <thead>
                                <tr>
                                    <th style="width: 10px">
                                        <input type="checkbox" id="exampleCheck1">
                                    </th>
                                    <th>Attributes Group Name</th>

                                    <th>Sort Order</th>
                                    <th style="width: 40px">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    int count = 0;
                                    foreach (var attgrp in attributesGroup)
                                    {
                                        count++;


                                        <tr>
                                            <td><input type="checkbox" id="exampleCheck1"></td>

                                            <td>@attgrp</td>

                                            <td>@count</td>
                                            @*<td style="width: 40px">Action</td>*@
                                            <td><a  href="@Url.Action("AddattributesGroup")" class="btn btn-primary"><i class="fas fa-edit"></i></a></td>


                                        </tr>

                                    }

                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">«</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">»</a></li>
                        </ul>
                    </div>
                </div>

            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>