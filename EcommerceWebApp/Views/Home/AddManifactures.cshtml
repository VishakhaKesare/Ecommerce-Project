
@{
    ViewBag.Title = "AddManifactures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="container-fluid">
                    <div class="float-end">

                        <div class="container">
                            <div class="row align-items-center mb-3">
                                <!-- Heading -->
                                <div class="col">
                                    <h1>Manifactures </h1>
                                </div>

                                <!-- Buttons -->
                                <div class="col-auto">
                                    <!-- Save button -->
                                    <button type="submit" @*form="form-category"*@ class="btn btn-primary ms-2">
                                        <i class="fas fa-save me-1"></i> Save
                                    </button>
                                    <!-- Back button -->
                                    <a href="@Url.Action("Manifactures")" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> Go Back
                                    </a>
                                </div>
                            </div>

                            <!-- Breadcrumbs -->
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Home</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Manifactures")">Manifactures</a></li>
                            </ol>
                        </div>


                        <!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->

                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header"><i class="fas fa-pencil-alt"></i> Add Manufacturer</div>
                        <div class="card-body">
                            <form id="form-manufacturer" action="https://demo.opencart.com/admin/index.php?route=catalog/manufacturer|save&amp;user_token=40028cc3e1a2e31550a27df10b7fb0bb" method="post" data-oc-toggle="ajax">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">General</a></li>
                                    <li class="nav-item"><a href="#tab-seo" data-bs-toggle="tab" class="nav-link">SEO</a></li>
                                    <li class="nav-item"><a href="#tab-design" data-bs-toggle="tab" class="nav-link">Design</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div id="tab-general" class="tab-pane active">
                                        <div class="row mb-3 required">
                                            <label for="input-name" class="col-sm-2 col-form-label">Manufacturer Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="name" value="" placeholder="Manufacturer Name" id="input-name" class="form-control">
                                                <div id="error-name" class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label class="col-sm-2 col-form-label">Stores</label>
                                            <div class="col-sm-10">
                                                <div class="form-control" style="height: 150px; overflow: auto;">
                                                    <div class="form-check">
                                                        <input type="checkbox" name="manufacturer_store[]" value="0" id="input-store-0" class="form-check-input" checked=""> <label for="input-store-0" class="form-check-label">Default</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3 align-items-center">
                                            <label for="input-image" class="col-sm-2 col-form-label">Image</label>
                                            <div class="col-sm-10">
                                                <div class="card image" style="max-width: 200px; max-height: 300px;">
                                                    <!-- Adjust max-width as needed -->
                                                    <img src="https://demo.opencart.com/image/cache/no_image-100x100.png" alt="" title="" id="thumb-image" data-oc-placeholder="https://demo.opencart.com/image/cache/no_image-100x100.png" class="card-img-top">
                                                    <input type="hidden" name="image" value="" id="input-image">
                                                    <div class="card-body d-flex justify-content-between align-items-center">
                                                        <!-- Added align-items-center class -->
                                                        <button type="button" data-oc-toggle="image" data-oc-target="#input-image" data-oc-thumb="#thumb-image" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i> Edit</button>
                                                        <button type="button" data-oc-toggle="clear" data-oc-target="#input-image" data-oc-thumb="#thumb-image" class="btn btn-warning btn-sm"><i class="fas fa-trash-alt"></i> Clear</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row mb-3">
                                            <label for="input-sort-order" class="col-sm-2 col-form-label">Sort Order</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="sort_order" value="" placeholder="Sort Order" id="input-sort-order" class="form-control">
                                            </div>
                                            <input type="hidden" name="subscription_plan_id" value="0" id="input-subscription-plan-id">
                           
                                        </div> 
                                            </form>
                       </div>
                    </div>
                </div>
               


                <!-- main content end -->
