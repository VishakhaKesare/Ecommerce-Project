
@{
    ViewBag.Title = "Manufacturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Manufacturers</h1>


                </div><!-- /.col -->
                <div class="col-md-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Manifactures</li>
                    </ol>

                </div><!-- /.col -->
                <div class="col">
                    <div class="float-sm-right">
                        <a href="@Url.Action("AddManifactures")" data-bs-toggle="tooltip" title="" class="btn btn-primary" data-bs-original-title="Add New" aria-label="Add New"><i class="fas fa-plus"></i></a>
                        <button type="submit" form="form-subscription-plan"
                                formaction="https://demo.opencart.com/admin/index.php?route=catalog/subscription_plan|delete&amp;user_token=4ca83d273fa34bd95748b6ad76b4193a" data-bs-toggle="tooltip" title="" onclick="return confirm('Are you sure?');" class="btn btn-danger" data-bs-original-title="Delete" aria-label="Delete">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
            <div class="row">

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"> <i class="fas fa-list"></i> &nbsp;Manifatures Lists</h3>
                    </div>
                    <!-- /.card-header -->

                    @{
                        string[] Manifactures = { "Apple", "Cananon", "Sony", "Hpc", "MI" };
                    }
                    <div class="card-body">
                        <table class="table table-bordered" id="manifactbl">
                            <thead>
                                <tr>
                                    <th>
                                        <!-- <input type="checkbox" id="exampleCheck1"> -->

                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input custom-control-input-danger custom-control-input-outline" type="checkbox" id="customCheckbox5">
                                            <label for="customCheckbox5" class="custom-control-label"></label>
                                        </div>
                                    </th>
                                    <th>Manufacture Name</th>
                                    <th>Sort Order</th>
                                    <th style="width: 40px">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <tbody>

                                @{
                                    int count = 0;
                                    foreach (var Mani in Manifactures)
                                    {
                                        count++;


                                        <tr>
                                            <td><input type="checkbox" id="exampleCheck1"></td>

                                            <td>@Mani</td>

                                            <td>@count</td>
                                            @*<td style="width: 40px">Action</td>*@
                                            <td><a class="btn btn-primary"><i class="fas fa-edit"></i></a></td>


                                        </tr>

                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 text-start"></div>
                        <div class="col-sm-6 text-end">Showing 0 to 0 of 0 (0 Pages)</div>
                    </div>
                </div>
            </div>
