
@{
    ViewBag.Title = "AddDownlods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="container-fluid">
                    <div class="float-end">

                        <div class="container">
                            <div class="row align-items-center mb-3">
                                <!-- Heading -->
                                <div class="col">
                                    <h1>Information</h1>
                                </div>

                                <!-- Buttons -->
                                <div class="col-auto">
                                    <!-- Save button -->
                                    <button type="submit" @*form="form-category"*@ class="btn btn-primary ms-2">
                                        <i class="fas fa-save me-1"></i> Save
                                    </button>
                                    <!-- Back button -->
                                    <a href="@Url.Action("Downlods")" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i> Go Back
                                    </a>
                                </div>
                            </div>

                            <!-- Breadcrumbs -->
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index")">Home</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("AddDownlods")">Downloads</a></li>
                            </ol>
                        </div>


                        <!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->

                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header"><i class="fas fa-pencil-alt"></i> Add Download</div>
                        <div class="card-body">
                            <form id="form-download" action="https://demo.opencart.com/admin/index.php?route=catalog/download|save&amp;user_token=40028cc3e1a2e31550a27df10b7fb0bb" method="post" data-oc-toggle="ajax">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item"><a href="#tab-general" data-bs-toggle="tab" class="nav-link active">General</a></li>
                                    <li class="nav-item"><a href="#tab-report" data-bs-toggle="tab" class="nav-link">Report</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div id="tab-general" class="tab-pane active">
                                        <div class="row mb-3 required">
                                            <label class="col-sm-2 col-form-label">Download Name</label>
                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <div class="input-group-text"><img src="~/Content/admin/img/language.png" title="English"></div>
                                                    <input type="text" name="download_description[1][name]" value="" placeholder="Download Name" id="input-name-1" class="form-control">
                                                </div>
                                                <div id="error-name-1" class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <div class="row mb-3 required">
                                            <label for="input-filename" class="col-sm-2 col-form-label">Filename</label>
                                            <div class="col-sm-10">
                                                <div class="input-group">
                                                    <button type="button" id="button-upload" class="btn btn-primary"><i class="fas fa-upload"></i> Upload</button>
                                                    <input type="text" name="filename" value="" placeholder="Filename" id="input-filename" class="form-control">
                                                    <button type="button" id="button-download" class="btn btn-outline-secondary" disabled=""><i class="fas fa-download"></i> Download</button>
                                                </div>
                                                <div class="form-text" style="color: #666;">You can upload via the upload button or use FTP to upload to the download directory and enter the details below.</div>
                                                <div id="error-filename" class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                        <div class="row mb-3 required">
                                            <label for="input-mask" class="col-sm-2 col-form-label">Mask</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="mask" value="" placeholder="Mask" id="input-mask" class="form-control">
                                                <div class="form-text" style="color: #666;">It is recommended that the filename and the mask are different to stop people trying to directly link to your downloads.</div>
                                                <div id="error-mask" class="invalid-feedback"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="tab-report" class="tab-pane">
                                        <fieldset>
                                            <legend>Report</legend>
                                            <div id="report">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered table-hover">
                                                        <thead>
                                                            <tr>
                                                                <td class="text-start">IP</td>
                                                                <td class="text-end">Accounts</td>
                                                                <td class="text-start">Store</td>
                                                                <td class="text-start">Country</td>
                                                                <td class="text-start">Date Added</td>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td class="text-center" colspan="5">No results!</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6 text-start"></div>
                                                    <div class="col-sm-6 text-end">Showing 0 to 0 of 0 (0 Pages)</div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                                <input type="hidden" name="download_id" value="0" id="input-download-id">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            </div>
</div>